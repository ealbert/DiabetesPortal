<div id="dialog-telephone" title="Create a new telephone encounter" style="display: none">
    <h2>Patient uses a pump</h2>
    <img src="{{ asset('images/pump_logo.png') }}" alt="Injection Logo"  style="display: inline-block;"/>
    <div style="display: inline-block; vertical-align: top; " >
        <form action="{{ path('patient_call', {'callType':'Received', 'treatmentType':'pump', 'patientId':'9999'}) }}" method="get">
            <button class="dialog-button" type="submit" value="12345" name="patientId">Call Received</button>
        </form>
        <form action="{{ path('patient_call', {'callType':'Initiated', 'treatmentType':'pump', 'patientId':'9998'}) }}" method="get">
            <button class="dialog-button" type="submit" value="12345" name="patientId">Call Initiated</button>
        </form>
    </div>
    <br/>
    <br/>
    <h2>Patient uses injections</h2>
    <img src="{{ asset('images/injection_logo.png') }}" alt="Injection Logo" style="display: inline-block;"/>
    <div style="display: inline-block; vertical-align: top; " >
        <form action="{{ path('patient_call', {'callType':'Received', 'treatmentType':'injections', 'patientId':'9997'}) }}" method="get">
            <button class="dialog-button" type="submit" value="12345" name="patientId">Call Received</button>
        </form>
        <form action="{{ path('patient_call', {'callType':'Initiated', 'treatmentType':'injections', 'patientId':'9996'}) }}" method="get">
            <button class="dialog-button" type="submit" value="12345" name="patientId">Call Initiated</button>
        </form>
    </div>
</div>
<script type="text/javascript">

    $(function () {
        $("#dialog-telephone").dialog({
            modal: true,
            width: 380,
            show: 1000,
            hide: 1000,
            autoOpen: false,
            open: function(){
                $('.ui-widget-overlay').addClass('custom-overlay');
            },
            close: function() {
                $('.ui-widget-overlay').removeClass('custom-overlay');
            },
            buttons: {
                Cancel: function () {
                    $(this).dialog("close");
                }
            }
        });
    });
</script>